@inherits LayoutComponentBase
@using Blazored.Toast
@using Blazored.Toast.Services
@using Blazored.Toast.Configuration

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>BlazorDownloader</PageTitle>

<style>
    .blazored-toast-container {
        z-index: 9999 !important;
    }
    .mud-main-content {
    padding-bottom: 44px !important;
}
</style>
<BlazoredToasts Position="ToastPosition.TopRight" Timeout="10" IconType="IconType.FontAwesome" ErrorIcon="error_outline"
    InfoIcon="school" SuccessIcon="done_outline" WarningIcon="warning" ShowProgressBar="@true" ShowCloseButton="@true"
    MaxToastCount="3">
    <CloseButtonContent>
        <div>
            <span class="myCloseButtonStyleClass">&times;</span>
        </div>
    </CloseButtonContent>
</BlazoredToasts>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        @* <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" Href="https://mudblazor.com/"
        Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit"
        Href="https://github.com/MudBlazor/MudBlazor/" Target="_blank" /> *@
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">BlazorDownloader</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-2 pt-2">
            @Body
            <MudAppBar class="align-center" Color="Color.Primary" Bottom="true" Fixed="true" Elevation="1" Dense=true>
                <MudSpacer />
                <span class="align-center">
                    © 2023 Copyright:
                    <a class="text-dark" href="https://T.me/ArashZandi">Arash Zandi</a>
                </span>
            </MudAppBar>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}